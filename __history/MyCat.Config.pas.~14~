unit MyCat.Config;

interface

type
  TCapabilities = class
  public const
    // new more secure passwords
    CLIENT_LONG_PASSWORD: Cardinal = 1;

    // Found instead of affected rows
    // 返回找到（匹配）的行数，而不是改变了的行数。
    CLIENT_FOUND_ROWS: Cardinal = 2;

    // Get all column flags
    CLIENT_LONG_FLAG: Cardinal = 4;

    // One can specify db on connect
    CLIENT_CONNECT_WITH_DB: Cardinal = 8;

    // Don't allow database.table.column
    // 不允许“数据库名.表名.列名”这样的语法。这是对于ODBC的设置。
    // 当使用这样的语法时解析器会产生一个错误，这对于一些ODBC的程序限制bug来说是有用的。
    CLIENT_NO_SCHEMA: Cardinal = 16;

    // Can use compression protocol
    // 使用压缩协议
    CLIENT_COMPRESS: Cardinal = 32;

    // Odbc client
    CLIENT_ODBC: Cardinal = 64;

    // Can use LOAD DATA LOCAL
    CLIENT_LOCAL_FILES: Cardinal = 128;

    // Ignore spaces before '('
    // 允许在函数名后使用空格。所有函数名可以预留字。
    CLIENT_IGNORE_SPACE: Cardinal = 256;

    // New 4.1 protocol This is an interactive client
    CLIENT_PROTOCOL_41: Cardinal = 512;

    // This is an interactive client
    // 允许使用关闭连接之前的不活动交互超时的描述，而不是等待超时秒数。
    // 客户端的会话等待超时变量变为交互超时变量。
    CLIENT_INTERACTIVE: Cardinal = 1024;

    // Switch to SSL after handshake
    // 使用SSL。这个设置不应该被应用程序设置，他应该是在客户端库内部是设置的。
    // 可以在调用mysql_real_connect()之前调用mysql_ssl_set()来代替设置。
    CLIENT_SSL: Cardinal = 2048;

    // IGNORE sigpipes
    // 阻止客户端库安装一个SIGPIPE信号处理器。
    // 这个可以用于当应用程序已经安装该处理器的时候避免与其发生冲突。
    CLIENT_IGNORE_SIGPIPE: Cardinal = 4096;

    // Client knows about transactions
    CLIENT_TRANSACTIONS: Cardinal = 8192;

    // Old flag for 4.1 protocol
    CLIENT_RESERVED: Cardinal = 16384;

    // New 4.1 authentication
    CLIENT_SECURE_CONNECTION: Cardinal = 32768;

    // Enable/disable multi-stmt support
    // 通知服务器客户端可以发送多条语句（由分号分隔）。如果该标志为没有被设置，多条语句执行。
    CLIENT_MULTI_STATEMENTS: Cardinal = 65536;

    // Enable/disable multi-results
    // 通知服务器客户端可以处理由多语句或者存储过程执行生成的多结果集。
    // 当打开CLIENT_MULTI_STATEMENTS时，这个标志自动的被打开。
    CLIENT_MULTI_RESULTS: Cardinal = 131072;

    CLIENT_PLUGIN_AUTH: Cardinal = $00080000; // 524288
  end;

implementation

end.
